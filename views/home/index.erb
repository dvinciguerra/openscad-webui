
<%= partial 'components/_header' %>


<div class="container-fluid h-100 p-0">
  <ul class="nav nav-tabs nav-justified" id="navigation" role="tablist">
    <li class="nav-item" role="presentation">
      <a
        data-mdb-tab-init
        class="nav-link active"
        id="nav-tab-editor"
        href="#nav-pane-editor"
        role="tab"
        aria-controls="nav-pane-editor"
        aria-selected="true"
      >
        <i class="fas fa-bars-staggered"></i>
        Editor
      </a>
    </li>
    <li class="nav-item" role="presentation">
      <a
        data-mdb-tab-init
        class="nav-link"
        id="nav-tab-preview"
        href="#nav-pane-preview"
        role="tab"
        aria-controls="nav-pane-preview"
        aria-selected="false"
      >
        <i class="fas fa-cube"></i>
        Preview
      </a>
    </li>
    <li class="nav-item" role="presentation">
      <a
        data-mdb-tab-init
        class="nav-link"
        id="nav-tab-settings"
        href="#nav-pane-settings"
        role="tab"
        aria-controls="nav-pane-settings"
        aria-selected="false"
      >
        <i class="fas fa-cog"></i>
        Settings
      </a>
    </li>
  </ul>

  <div class="tab-content" id="navigation-panes">
    <div class="tab-pane fade show active" id="nav-pane-editor" role="tabpanel" aria-labelledby="nav-tab-editor">
      <%= partial 'home/_editor' %>
    </div>
    <div class="tab-pane fade" id="nav-pane-preview" role="tabpanel" aria-labelledby="nav-tab-preview">
      <%= partial 'home/_preview' %>
    </div>
    <div class="tab-pane fade" id="nav-pane-settings" role="tabpanel" aria-labelledby="nav-tab-settings">
      <%= partial 'home/_settings' %>
    </div>
  </div>
</div>

